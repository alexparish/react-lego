    "babel-plugin-graphql-tag": "^1.3.0",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.2.1",
    "chance": "^1.0.6",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
