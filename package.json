{
  "name": "react-lego",
  "version": "3.0.0",
  "description": "",
  "main": "src/server-entry.js",
  "scripts": {
    "------ GIT HOOKS ------": "",
    "precommit": "yarn lint && yarn test",
    "prepush": "yarn build && yarn test:e2e",
    "postinstall": "yarn build",
    "------ BUILD STEPS ------": "",
    "build": "rm -rf compiled && yarn compile:server && yarn compile && node scripts/copy-assets.js",
    "compile": "webpack --config webpack.config.prod.js -p",
    "compile:prod": "npm run compile",
    "compile:dev": "ENV=dev webpack --config src/config/webpack.config.dev.js",
    "compile:server": "babel src -d compiled",
    "------ SERVER STEPS ------": "",
    "start": "node compiled/server-entry.js",
    "start:prod": "npm run start",
    "start:dev": "webpack-dev-server --config webpack-dev-server.js",
    "------ TESTING ------": "",
    "test:setup": "selenium-standalone install yarn build",
    "lint": "sass-lint -v -q -c ./sass-lint.yml && eslint 'src/**/*.js'",
    "test": "yarn test:unit && yarn test:func",
    "test:unit": "jest --config jest.json .*.spec.jsx?",
    "test:func": "jest --config jest.json .*.func.jsx? --collectCoverage false",
    "test:e2e": "yarn test:e2e-local",
    "test:e2e-local": "yarn nightwatch -- --env local --tag staging",
    "test:e2e-production": "yarn nightwatch -- --env chrome_win --tag production",
    "test:e2e-staging": "yarn nightwatch -- --env safari_osx,chrome_osx,firefox_win,firefox_osx,IE11,edge --tag staging",
    "nightwatch": "nightwatch -o ./tests/e2e/tests_output -c ./tests/config/nightwatch/nightwatch.conf.js",
    "------ UTILS ------": "",
    "nuke": "rm -rf node_modules && yarn && yarn test"
  },
  "engines": {
    "node": "^9.3.0",
    "npm": "^5.5.1"
  },
  "author": "Peter Mouland",
  "license": "ISC",
  "dependencies": {
    "apollo-cache-inmemory": "^1.1.4",
    "apollo-client": "^2.0.4",
    "apollo-link-http": "^1.3.1",
    "apollo-link-schema": "^1.0.1",
    "apollo-link-state": "^0.1.0",
    "assets-webpack-plugin": "^3.5.1",
    "babel-core": "^6.8.0",
    "babel-loader": "^7.1.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-react": "^6.5.0",
    "css-loader": "^0.28.0",
    "cssnano": "^3.10.0",
    "debug": "^3.1.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "fs-extra": "^5.0.0",
    "glob": "^7.1.2",
    "graphql": "^0.11.7",
    "graphql-tag": "^2.6.0",
    "http-server": "^0.10.0",
    "koa": "^2.4.1",
    "koa-body": "^2.5.0",
    "koa-compress": "^2.0.0",
    "koa-router": "^7.3.0",
    "koa-static": "^4.0.2",
    "node-fetch": "^1.7.3",
    "node-hook": "^1.0.0",
    "node-sass": "^4.5.0",
    "nodemon": "^1.12.7",
    "postcss-loader": "^2.0.9",
    "progress-bar-webpack-plugin": "^1.9.3",
    "promise-polyfill": "^6.1.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
